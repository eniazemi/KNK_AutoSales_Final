<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.input.KeyCodeCombination?>

<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="830.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enifinal.controllers.StatisticsController">

    <MenuBar prefWidth="1200">
        <Menu mnemonicParsing="false" text="Main">
            <MenuItem mnemonicParsing="false" text="Home" onAction="#gotoHome">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Preferences">
            <MenuItem mnemonicParsing="false" text="View all cars" onAction="#gotoAllCars">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="Statistics" onAction="#gotoStatistics">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Profile">
            <MenuItem mnemonicParsing="false" text="View profile" onAction="#gotoProfile">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="Change password" onAction="#gotoUserEdit">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="SignOut" onAction="#gotoSignOut">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="ESCAPE" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Settings">
            <MenuItem mnemonicParsing="false" text="Change language" onAction="#gotoChangeLanguage">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="About us" onAction="#gotoAboutUs">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
    </MenuBar>


    <Label layoutX="400.0" layoutY="45.0" text="Some statistics about our cars">
        <font>
            <Font size="32.0"/>
        </font>
    </Label>
    <BarChart fx:id="barChartC" layoutX="50.0" layoutY="100.0" prefHeight="300.0" prefWidth="400.0"
              title="Fuel of our cars" barGap="10" categoryGap="1">
        <xAxis>
            <CategoryAxis side="BOTTOM" label="Fuel"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" label="# of cars"/>
        </yAxis>
    </BarChart>
    <PieChart fx:id="pieChartC" layoutX="700.0" layoutY="100.0" prefHeight="300.0" prefWidth="400.0"
              title="Year of release" legendVisible="false"/>

    <Label layoutX="400.0" layoutY="445.0" text="Some statistics about our users">
        <font>
            <Font size="32.0"/>
        </font>
    </Label>
    <PieChart fx:id="pieChartU" layoutX="50.0" layoutY="500.0" prefHeight="300.0" prefWidth="400.0"
              title="Gender of our users"/>
    <BarChart fx:id="barChartU" layoutX="700.0" layoutY="500.0" prefHeight="300.0" prefWidth="400.0"
              title="City of our users" barGap="10" categoryGap="1">
        <xAxis>
            <CategoryAxis side="BOTTOM" label="City"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" label="# of users"/>
        </yAxis>
    </BarChart>

</AnchorPane>
